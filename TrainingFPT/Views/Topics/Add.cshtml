@model TrainingFPT.Models.TopicDetail

@{
    ViewData["Title"] = "Create new Topics Page";
    ViewData["namePage"] = "Create new Topic";
    ViewBag.report = false;

    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <a class="btn btn-primary" href="@Url.Action("Index", "Topics")"> Back to list Topics </a>
        <div class="card card-primary my-3">
            <div class="card-header">
                <h5 class="card-title"> Create new Topics </h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-action="Add">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NameTopic"></label>
                                <input type="text" class="form-control" asp-for="NameTopic" required />
                                <span asp-validation-for="NameTopic"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label> Course </label>
                                <select class="form-control"
                                        asp-for="CourseId"
                                        asp-items="@(new SelectList(ViewBag.Courses, "Value", "Text"))">
                                </select>
                                <span asp-validation-for="CourseId"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            </div>

                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Video"></label>
                                <input type="file" asp-for="Video" class="form-control" />
                                <span asp-validation-for="Video"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Audio"></label>
                                <input type="file" asp-for="Audio" class="form-control" />
                                <span asp-validation-for="Audio"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="DocumentTopic"></label>
                                <input type="file" class="form-control" asp-for="DocumentTopic" />
                                <span asp-validation-for="DocumentTopic"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status"></label>
                                <select class="form-control" asp-for="Status">
                                    <option value=""> -- Choose --</option>
                                    <option value="Active"> Active </option>
                                    <option value="Deactive"> Deactive </option>
                                </select>
                                <span asp-validation-for="Status"></span>
                            </div>
                            <button class="my-3 btn btn-primary btn-lg" type="submit">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
